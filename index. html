    <script>
        function searchTools() {
            window.open('https://www.google.com/search?q=أدوات إنشاء فيديو مجانية 2024', '_blank');
        }
        function openFacebook() { window.open('https://facebook.com', '_blank'); }
        function openInstagram() { window.open('https://instagram.com', '_blank'); }
        function openTikTok() { window.open('https://tiktok.com', '_blank'); }
        function openYouTube() { window.open('https://youtube.com', '_blank'); }
